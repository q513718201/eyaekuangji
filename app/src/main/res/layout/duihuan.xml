<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_color"
    android:orientation="vertical">

    <include
        android:id="@+id/mToolBar"
        layout="@layout/toolbar" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"

            android:orientation="vertical">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_white_solid_5dp_coner"
                android:paddingLeft="15dp"
                android:paddingTop="11dp"
                android:paddingRight="15dp"
                android:paddingBottom="9dp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="持有WHB数量"
                    android:textColor="@color/home_text"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="0.00"
                    android:textColor="#295EFD"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_amount"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="4dp"
                    android:text="1WHB≈0.41356USDT"
                    android:textColor="@color/hintTextColor"
                    android:textSize="12sp" />
            </RelativeLayout>


            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_white_solid_5dp_coner"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="42dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_whb_20"
                            />
                        <TextView
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WHB"
                            android:textColor="@color/color_black"
                            android:textSize="14sp" />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/usdt"
                            />
                        <TextView
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="USDT"
                            android:textColor="@color/color_black"
                            android:textSize="14sp" />


                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_marginTop="15dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:hint="至少500WHB"
                        android:gravity="center"
                         android:id="@+id/et_whb"
                        android:layout_width="130dp"
                        android:layout_height="50dp"
                        android:textSize="14sp"
                        android:background="#F2F6FF"
                        android:inputType="numberDecimal"
                        android:textColorHint="@color/hintTextColor"
                        android:textColor="@color/color_black"

                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/transfer"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        />
                    <EditText
                        android:focusable="false"
                        android:text="0.00"
                        android:layout_alignParentRight="true"
                        android:id="@+id/et_usdt"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:layout_width="130dp"
                        android:layout_height="50dp"
                        android:background="#F2F6FF"
                        android:textColor="@color/color_black"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:background="#F2F6FF"
                    android:paddingLeft="10dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="10dp"
                        android:text="手续费"
                        android:textColor="@color/color_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_need"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:text="0"
                        android:textColor="@color/blue"
                        android:textSize="14sp" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:background="#F2F6FF"
                    android:paddingLeft="10dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="10dp"
                        android:text="实际到账"
                        android:textColor="@color/color_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_shiji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:text="0"
                        android:textColor="@color/blue"
                        android:textSize="14sp" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/jiaoyi_pwd"
                    android:textColor="@color/hintTextColor"
                    android:textSize="12sp" />


                <EditText
                    android:id="@+id/et_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="15dp"
                    android:background="#F2F6FF"
                    android:hint="@string/input_deal_pwd"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColor="@color/home_text"
                    android:textColorHint="@color/text_color_edit_hint"
                    android:textSize="14sp" />
                <Button
                    android:id="@+id/tv_bt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="44dp"
                    android:background="@drawable/bg_blue_solid_5dp_coner"
                    android:text="@string/tibi"
                    android:textColor="@color/color_white"
                    app:layout_constraintTop_toBottomOf="@+id/ll_code" />
            </LinearLayout>







        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
</LinearLayout>
