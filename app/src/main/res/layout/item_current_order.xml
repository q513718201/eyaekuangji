<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/white_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/white_tv"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:paddingStart="@dimen/margin_16"
        android:paddingEnd="@dimen/margin_16"
        android:paddingBottom="@dimen/margin_16">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_no"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical"
            android:text="@string/text_order_no"
            android:textColor="#ff737373"
            android:maxEms="15"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_days"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_days"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="@string/text_cur_days"
            android:textColor="#ff0d6e62"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#FFF4F4F4"
            app:layout_constraintTop_toBottomOf="@+id/tv_no" />

        <TextView
            android:id="@+id/item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:text="500"
            android:textColor="#ff0d6e62"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider" />

        <!--<TextView-->
            <!--android:id="@+id/tv_coin"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="WHB"-->
            <!--android:textColor="#ff0d6e62"-->
            <!--android:textSize="12sp"-->
            <!--app:layout_constraintBaseline_toBaselineOf="@+id/item1"-->
            <!--app:layout_constraintBottom_toBottomOf="@+id/item1"-->
            <!--app:layout_constraintStart_toEndOf="@+id/item1" />-->

        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投入金额"
            android:textColor="#ffa5a5a5"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/item1"
            app:layout_constraintTop_toBottomOf="@+id/item1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffa5a5a5"
            android:text="(WHB)"
            android:textSize="8sp"
            android:layout_marginTop="4dp"
            app:layout_constraintLeft_toRightOf="@id/name1"
            app:layout_constraintTop_toBottomOf="@id/item1"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:text="500"
            android:textColor="#ff0d6e62"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/name2"
            app:layout_constraintTop_toBottomOf="@id/divider" />


        <TextView
            android:id="@+id/name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="投入时长"
            android:textColor="#ffa5a5a5"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/name1"
            app:layout_constraintEnd_toStartOf="@+id/guideline" />

        <TextView
            android:id="@+id/item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:text="500"
            android:textColor="#ff0d6e62"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/name3"
            app:layout_constraintTop_toBottomOf="@id/divider" />


        <TextView
            android:id="@+id/name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="收益率"
            android:textColor="#ffa5a5a5"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/name1"
            app:layout_constraintStart_toStartOf="@+id/guideline" />

        <TextView
            android:id="@+id/item4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:text="500"
            android:layout_marginLeft="7dp"
            android:textColor="#ff0d6e62"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/name4"
            app:layout_constraintTop_toBottomOf="@id/divider" />

        <TextView
            android:id="@+id/whbbb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffa5a5a5"
            android:text="(WHB)"
            android:textSize="8sp"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/name1"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/name4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已释放收益"
            android:textColor="#ffa5a5a5"
            android:textSize="12sp"
            app:layout_constraintRight_toLeftOf="@id/whbbb"
            app:layout_constraintBottom_toBottomOf="@+id/name1" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_fff2f6ff_coner4"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingTop="8dp"
            android:paddingEnd="10dp"
            android:paddingBottom="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="@+id/name1"
            app:layout_constraintTop_toBottomOf="@+id/name1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="投入时间"
                android:textColor="#ffa5a5a5"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:text="2020-08-15 15:10:20"
                android:textColor="#ff0d6e62"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/bt_transfers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_redeem"
            android:text="赎回"
            android:textColor="@color/color_white"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/linearLayout" />
        <!--app:srcCompat="@mipmap/bt_transfer"-->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.65" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>