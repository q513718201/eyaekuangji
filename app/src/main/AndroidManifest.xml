<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.hazz.whb">

    <!-- 获取GSM网络信息状态，如当前的网络连接是否有效 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 允许访问Wi-Fi网络状态信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 允许获取Wi-Fi网络状态改变信息 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!-- 访问网络 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 读取手机状态 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS"
        tools:ignore="ProtectedPermissions" />
    <!-- SD 卡读写权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.hazz.whb.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/kuangji_logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_config"
        android:roundIcon="@mipmap/logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name="com.hazz.whb.ui.activity.LauncherActivity"
            android:theme="@style/AppLaunchTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.hazz.whb.ui.activity.MainActivity" />
        <activity android:name="com.hazz.whb.ui.activity.LoginActivity" />
        <activity android:name="com.hazz.whb.ui.activity.ForgetPwdActivity" />
        <activity android:name="com.hazz.whb.ui.activity.RegisterActivity" />
        <activity android:name="com.hazz.whb.ui.activity.CountryActivity"/>
        <activity android:name="com.hazz.whb.ui.activity.InviteActivity"/>
        <activity android:name="com.hazz.whb.ui.activity.InviteRecordActivity"/>
        <activity android:name="com.hazz.whb.ui.activity.SettingActivity"/>
        <activity android:name="com.hazz.whb.ui.activity.SafeActivity"/>
        <activity android:name="com.hazz.whb.ui.activity.NodeActivity"/>
        <activity android:name="com.hazz.whb.ui.activity.TibiActivity"/>
        <activity android:name="com.hazz.whb.ui.activity.TibiRecordActivity"/>
        <activity android:name="com.hazz.whb.ui.activity.ChargeActivity"/>
        <activity android:name="com.hazz.whb.ui.activity.ChargeRecordActivity"/>
        <activity android:name="com.hazz.whb.ui.activity.TouziActivity"/>
        <activity android:name="com.hazz.whb.ui.activity.TouziConfirmActivity"/>
        <activity android:name="com.hazz.whb.ui.activity.FindZijinPwdActivity"/>
        <activity android:name="com.hazz.whb.ui.activity.ModifyPwdActivity"/>
        <activity android:name="com.hazz.whb.ui.activity.MsgListActivity"/>
        <activity android:name="com.hazz.whb.ui.activity.MsgDescActivity"/>
        <activity android:name="com.hazz.whb.ui.activity.IncomingActivity"/>
        <activity android:name="com.hazz.whb.ui.activity.TouziRecordActivity"/>
        <activity android:name="com.hazz.whb.ui.activity.ScanCoinAddressActivity"/>
        <activity android:name="com.hazz.whb.ui.activity.ZujieActivity"/>
        <activity android:name="com.hazz.whb.ui.activity.MingxiRecordActivity"/>
        <activity android:name="com.hazz.whb.ui.activity.RuleActivity"/>
        <activity android:name="com.hazz.whb.ui.activity.NodeSecondActivity"/>
        <activity android:name="com.hazz.whb.ui.activity.RegistRuleActivity"/>
        <activity android:name="com.hazz.whb.ui.activity.KuangjiDescActivity"/>
        <activity android:name="com.hazz.whb.ui.activity.KuangjiDesc2Activity"/>
        <activity android:name="com.hazz.whb.ui.activity.SignRecordActivity"/>
    </application>

</manifest>